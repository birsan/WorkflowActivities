<sap:ActivityDesigner x:Class="UiPath.FlowProfiler.Activities.Design.ProfilerDesigner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation">

    <ContentControl>
        <DockPanel LastChildFill="True">
            <sap:WorkflowItemPresenter Name="FlowContainer" HintText="Drop Activity Here" Margin ="0, 5"
                                   DockPanel.Dock="Bottom" Item="{Binding Path=ModelItem.Body.Handler, Mode=TwoWay}"/>

        </DockPanel>
    </ContentControl>
</sap:ActivityDesigner>